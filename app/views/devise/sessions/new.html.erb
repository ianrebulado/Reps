<div class="flex flex-col justify-center items-center min-h-screen p-4">
  <div class="card shadow-lg w-full sm:w-3/4 md:w-1/2 lg:w-1/3">

    <div class="bg-yellow-400 w-full h-4 p-10 flex items-center justify-center">
      <h2 class="text-center">Log in</h2>
    </div>
  <div class="p-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black bg-white p-2 w-full" %>
      </div>

      <div class="field mt-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "text-black bg-white p-2 w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-4 font-bold">
        <%= f.submit "Log in", class: "bg-yellow-400 text-center p-2 w-full" %>
      </div>
    <% end %>

      <div>
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
