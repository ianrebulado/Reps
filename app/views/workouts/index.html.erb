<div class="flex max-h-screen overflow-x-auto">
  <%= render 'layouts/nav' %>

  <section class="overflow-auto w-full flex-1 p-4">
    <div class="flex flex-wrap">
      <% @workouts.each do |workout| %>
        <div class="w-full mb-4">
          <div class="border rounded-xl">

            <div class="mb-4 flex justify-between items-center bg-yellow-400 rounded-t-xl px-8 py-4 text-center">
              <h2 class="text-3xl font-bold text-black"><%= workout.name %></h2>
              <div class= "bg-red-500 text-white rounded-lg p-3 gap-2 font-semibold flex justify-center items-center">
              <i class="bi bi-trash"></i>
              <%= button_to "Delete", workout_path(workout), method: :delete, class: "text-white" %>
              </div>
            </div>

            <div class="flex flex-wrap justify-start gap-5 p-2">
              <% workout.exercises.each do |exercise| %>
                <div class="bg-yellow-400 rounded-lg p-4 text-left border-1 border-black">
                  <span class="text-lg font-bold text-black"><%= exercise.name.capitalize %></span>
                  <span class="text-sm text-gray-600 block mb-4"><%= exercise.body_part.capitalize %></span>
                  <img src="<%= exercise.url %>" alt="Exercise GIF" class="border-2 border-black rounded-lg ">
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
