<div class="min-h-screen flex">
  <%= render 'layouts/nav' %>

<%= form_with(model: current_user, url: update_profile_path, method: :patch) do |form| %>
  <div>
    <%= form.label 'Weight(lbs)', style: "display: block" %>
    <%= form.number_field :weight, class:'text-black' %>
  </div>

  <div>
    <%= form.label 'Height(CM)', style: "display: block" %>
    <%= form.number_field :height, class:'text-black' %>
  </div>

  <%= form.submit %>
<% end %>

</div>